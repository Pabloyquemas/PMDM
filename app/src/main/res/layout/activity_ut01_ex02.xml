<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ut01.ex02.presentation.Ut01Ex02Activity">
    <ImageView
        android:id="@+id/icondices"
        android:layout_width="@dimen/size_image"
        android:layout_height="@dimen/size_image"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_dados" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:text="@string/fecha"
            android:textcolor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:maxLines="1"
            android:text="@string/titulo"
            android:textcolor="@color/black"/>

        <TextView
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textAlignment="center"
            android:maxLines="2"
            android:orientation="horizontal"
            android:text="@string/contenido" />

    </LinearLayout>


    <!--<TextView

        android:layout_width="50dp"
