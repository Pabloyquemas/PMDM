        android:text="@string/title"
        android:textAlignment="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/red" />


    <ImageView
        android:id="@+id/iconleon"
        android:layout_width="@dimen/size_image"
